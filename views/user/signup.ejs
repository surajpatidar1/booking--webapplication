<% layout('layouts/head') -%>
<div class="row" mt-3>
<h1>  Signup </h1>
<br>
    <div class="col-8 offset-2">
<form action="/signup" method="post" class="needs-validations" novalidate>
    <div class="mb-3" >
        <label for="username" class="form-lable">Username</label>
        <input
         type="text" 
         name="username"
         class="form-control" 
         id="username" 
         required>
      </div>
      <div class="mb-3" >
        <label for="email" class="form-lable">Email</label>
        <input 
        type="text"
         name="email"
         class="form-control" 
         id="email" 
         required>
      </div>
      <div class="mb-3" >
        <label for="password" class="form-lable">Password</label>
        <input
         type="password" 
         name="password"
         class="form-control" 
         id="password"
         required >
      </div>
      <button class="btn btn-success" type="submit">Signup</button>
</form>

        </div>
        </div>