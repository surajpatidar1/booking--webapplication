<% layout('layouts/head') -%>
<div class="row" mt-3>
<h1 class="col-8 offset-2"> Login</h1>
<br><br><br>
    <div class="col-8 offset-2">
<form action="/login" method="post" class="needs-validations" novalidate>
    <div class="mb-3" >
        <label for="username" class="form-lable">Username</label>
        <input
         type="text" 
         name="username"
         class="form-control" 
         id="username" 
         required>
      </div>
      
      <div class="mb-3" >
        <label for="password" class="form-lable">Password</label>
        <input
         type="password" 
         name="password"
         class="form-control" 
         id="password"
         required >
      </div>
      <button class="btn btn-success" type="submit">Login</button>
</form>

        </div>
        </div>